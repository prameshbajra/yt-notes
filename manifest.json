{
    "manifest_version": 3,
    "name": "Video Notes",
    "version": "1.0",
    "description": "Take notes while watching youtube videos.",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/watch?v=*"],
            "js": ["scripts/content.js"]
        }
    ]
}